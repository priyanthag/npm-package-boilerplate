{
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/output": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/logs": true,
    "**/bin": true,
  },
  // Prevents VS Code from formatting JavaScript with the default linter
  "javascript.format.enable": false,
  // Prevents VS Code linting JavaScript with the default linter
  "javascript.validate.enable": false,
  // Lints with eslint
  "eslint.format.enable": true,
  "eslint.enable": true,
  "eslint.debug": true,
  "files.autoSave": "off",
  "editor.codeActionsOnSave" : {
    "source.fixAll": false,
    "source.fixAll.eslint": true
  },
  "eslint.run": "onType",
  "eslint.workingDirectories": ["./src"],
  "path-intellisense.extensionOnImport": true,
  "path-intellisense.showHiddenFiles": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.map.js": true
  },
  "editor.snippetSuggestions": "top",
  "runCurrentTest.run": "npm run test:single -- ${relativeTestPath} --runTestsByPath --testNamePattern \"^${fullTestName}$\"",
  "runCurrentTest.runAndUpdateSnapshots": "npm run test:single:snapshot -- -u ${relativeTestPath} --runTestsByPath --testNamePattern \"^${fullTestName}$\""
}
